<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home"
    tools:openDrawer="start">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
       <ProgressBar
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/progress_bar"
           android:layout_marginTop="320dp"/>
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <EditText
                    android:id="@+id/search_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:hint="Search your item here.."
                    android:drawableLeft="@drawable/ic_baseline_search_24"
                    android:elevation="3dp"
                    android:background="@drawable/shape20"
                    android:padding="13dp"
                    android:drawablePadding="5dp"
                    android:paddingLeft="5dp"
                    android:inputType="text"
                    android:contextClickable="true"
                    android:clickable="true"
                    tools:ignore="Autofill,VisualLintTextFieldSize" />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/search_rec"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/deal_text"
                    android:textSize="25sp"
                    android:fontFamily="@font/alice"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:background="#FEF5A9"/>

                <ScrollView
                    android:id="@+id/scroll_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/deals_rec"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp" />
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Popular Products"
                        android:textSize="18sp"
                        android:fontFamily="@font/alice"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/view_all_popular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" View All"
                        android:textSize="16sp"
                        android:gravity="end"
                        android:fontFamily="@font/alice"
                        android:textStyle="bold"
                        android:layout_marginRight="7dp"
                        android:textColor="@color/purple_700"
                        android:background="#00000000"/>

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/pop_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Explore Products"
                        android:textSize="18sp"
                        android:fontFamily="@font/alice"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/view_all_explore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" View All"
                        android:textSize="16sp"
                        android:gravity="end"
                        android:fontFamily="@font/alice"
                        android:textStyle="bold"
                        android:layout_marginRight="7dp"
                        android:textColor="@color/purple_700"/>

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/explore_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recommended Products"
                        android:textSize="18sp"
                        android:fontFamily="@font/alice"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/view_all_recommended"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" View All"
                        android:textSize="16sp"
                        android:gravity="end"
                        android:fontFamily="@font/alice"
                        android:textStyle="bold"
                        android:layout_marginRight="7dp"
                        android:textColor="@color/purple_700"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recommended_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Category"
                        android:textSize="18sp"
                        android:fontFamily="@font/alice"
                        android:textStyle="bold"/>
                    <Button
                        android:id="@+id/view_all_homeCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" View All"
                        android:textSize="16sp"
                        android:gravity="end"
                        android:fontFamily="@font/alice"
                        android:textStyle="bold"
                        android:layout_marginRight="7dp"
                        android:textColor="@color/purple_700"
                        android:background="#00000000"
                        android:onClick="categoryviewall"/>

                </LinearLayout>
                <ScrollView
                    android:id="@+id/scroll_viewcat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_category_rec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    />
                </ScrollView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Continue to search your products"
                        android:background="@drawable/shape20"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="3dp"
                        android:padding="5dp"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/aclonica"/>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/bakery_rec"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"/>
                    </ScrollView>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/breakfast_rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"/>
                    </ScrollView>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/drink_rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"/>
                    </ScrollView>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/fruit_rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"/>
                    </ScrollView>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/meat_rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"/>
                    </ScrollView>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/vegetable_rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"/>
                    </ScrollView>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/bakery1_rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:outlineAmbientShadowColor="@color/lawngreen"
                            android:contextClickable="true"
                            android:clipToOutline="true"/>
                    </ScrollView>
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Grab your Products and Placer your instant order quickly"
                        android:background="@drawable/shape44"
                        android:textSize="20sp"
                        android:padding="10dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center_horizontal"
                        android:contextClickable="true"
                        android:overScrollMode="always"/>
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/showall_home_rec"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"/>
                    </ScrollView>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:contentDescription="TODO" />
            </LinearLayout>
        </ScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/relativelayout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shape22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="TODO" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/home_bottom"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="TODO"
                    android:onClick="home_bottom"
                    android:src="@drawable/ic_baseline_home_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/relativelayout"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/profile_bottom"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="TODO"
                    android:onClick="profile_bottom"
                    android:src="@drawable/person_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/relativelayout"
                    tools:ignore="TouchTargetSizeCheck" />

                <ImageView
                    android:id="@+id/cart_bottom"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="TODO"
                    android:onClick="cart_bottom"
                    android:src="@drawable/ic_baseline_shopping_cart_checkout_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/relativelayout"
                    tools:ignore="TouchTargetSizeCheck" />
                <ImageView
                    android:id="@+id/dashboard"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="5dp"
                    android:contentDescription="TODO"
                    android:onClick="dashboard"
                    android:src="@drawable/baseline_shopping_basket_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/relativelayout"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RelativeLayout>
    <ImageView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape22"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:onClick="navopen"
        android:src="@drawable/ic_baseline_menu_24"
        android:layout_marginRight="280dp"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:background="#00000000"
        android:contentDescription="TODO"
        android:onClick="logout"
        android:src="@drawable/ic_baseline_logout_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,TouchTargetSizeCheck,DuplicateClickableBoundsCheck" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:id="@+id/navigation"
        android:orientation="vertical"
        android:background="@drawable/shape4"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:background="#00000000">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="#FF0000"
                    android:onClick="close1"
                    android:text="CLOSE"
                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:background="#00000000"
                    android:contentDescription="TODO"
                    android:onClick="navcls"
                    android:src="@drawable/cls_btn"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/nav_header_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon"
                app:civ_border_width="2dp"
                app:civ_border_color="#FF000000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="RedundantNamespace" />
            <TextView
                android:id="@+id/nav_header_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="androidStudio@gmail.com"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:fontFamily="@font/alice"/>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Home                "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/home"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="homenav"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Profile        "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/person_black"
            android:paddingLeft="10dp"
            android:onClick="profilenav"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Category          "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_category_24"
            android:paddingLeft="10dp"
            android:onClick="categorynav"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Offers"
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_local_offer_24"
            android:paddingLeft="10dp"
            android:onClick="offersnav"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  New Products        "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_autorenew_24"
            android:paddingLeft="10dp"
            android:onClick="newproductnav"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  My Orders            "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_local_grocery_store_24"
            android:paddingLeft="10dp"
            android:onClick="myorder"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  My Carts                  "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_shopping_cart_checkout_24"
            android:paddingLeft="10dp"
            android:onClick="mycartnav"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="#00000000"
        android:contentDescription="TODO"
        android:onClick="nav2_open"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints,TouchTargetSizeCheck" />
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="300dp"
        tools:ignore="MissingConstraints"
        android:id="@+id/navigation2"
        android:orientation="vertical"
        android:background="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#00000000">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cls_btn"
                    android:background="#00000000"
                    android:layout_gravity="start"
                    android:layout_marginLeft="20dp"
                    android:onClick="nav2_cls"
                    android:contentDescription="TODO" />
                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:text="CLOSE"
                    android:background="#FF0000"
                    android:textColor="@color/white"
                    android:onClick="close"/>

            </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Settings                "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_settings_suggest_24"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="settings"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Contact us        "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_contact_support_24"
            android:paddingLeft="10dp"
            android:onClick="contact"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Feedback          "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_feedback_24"
            android:paddingLeft="10dp"
            android:onClick="feedback"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  About"
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_info_24"
            android:paddingLeft="10dp"
            android:onClick="about"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>