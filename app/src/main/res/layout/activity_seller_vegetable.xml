<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".seller.SellerVegetableActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_address_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF8F00"
        app:title="Vegetables"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/pname"
            android:layout_marginTop="50dp"
            android:paddingStart="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Product Name *"
            android:inputType="text"
            android:background="@drawable/shape7"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/pdesc"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Description *"
            android:inputType="text"
            android:background="@drawable/shape7"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/pprice"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Price *"
            android:background="@drawable/shape7"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/prating"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Rating *"
            android:inputType="text"
            android:background="@drawable/shape7"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ptype"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Type - vegetable (Used this type only) *"
            android:inputType="text"
            android:background="@drawable/shape7"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/pshop_name"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Shop Name *"
            android:inputType="text"
            android:background="@drawable/shape7"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/ploc"
            android:layout_marginTop="20dp"
            android:paddingStart="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="Shop Address *"
            android:inputType="text"
            android:background="@drawable/shape7"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Click to Drag Your Image here ---->"
                android:background="#FF8F00"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:src="@drawable/choosefile"
                android:tooltipText="Drag and drop image here"
                android:layout_marginLeft="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/uploadButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:text="Upload"
        android:layout_centerHorizontal="true"
        android:background="@drawable/shape8"/>

</RelativeLayout>