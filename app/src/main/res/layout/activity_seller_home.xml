<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.SellerHomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Seller_text"
                    android:textSize="17sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alice"
                    android:layout_marginTop="10dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Choose Your Category"
                    android:textSize="25sp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:fontFamily="@font/alice"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"/>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bakeryEggsandBread"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bakeryeggsbreads"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Bakery Eggs and Bread"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/alice"
                            android:background="@drawable/shape11"
                            android:onClick="bakeryEggsandBread"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/cerealsandBreakFastFood"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cerealsandbreakfastfood"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Cereals and BreakFast Food"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/alice"
                            android:background="@drawable/shape11"
                            android:onClick="cerealsandBreakFastFood"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/drinks"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/drinks"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Drinks"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/alice"
                            android:background="@drawable/shape11"
                            android:onClick="drinks"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/fruits"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fresh_fruits"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Fruits"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/alice"
                            android:background="@drawable/shape11"
                            android:onClick="fruits"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/meatsandseafoods"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/meatandseafood"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Meats and Sea Foods"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/alice"
                            android:background="@drawable/shape11"
                            android:onClick="meatsandseafoods"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/vegetables"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/fresh_vegetables"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Vegetables"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/alice"
                            android:background="@drawable/shape11"
                            android:onClick="vegetables"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView >
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_margin="10dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/othertypes"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/other"
                            tools:ignore="SpeakableTextPresentCheck"
                            android:onClick="othertype"/>

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:text="Other Products"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:fontFamily="@font/alice"
                            android:background="@drawable/shape11"
                            android:onClick="othertype"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView >

            </LinearLayout>
        </ScrollView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/add_address_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF8F00"
                app:title="                       Seller Home"
                android:textAlignment="center"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_logout_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias=".9"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:onClick="sellerlogout"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:background="#00000000"
                android:src="@drawable/ic_baseline_menu_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="15dp"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                android:onClick="navigationopen"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:id="@+id/sellernavigation"
        android:orientation="vertical"
        android:background="#FF9800"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#00000000">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="10dp">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:background="#FF0000"
                    android:onClick="closenav"
                    android:text="CLOSE"
                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="20dp"
                    android:background="#00000000"
                    android:contentDescription="TODO"
                    android:onClick="navigationcls"
                    android:src="@drawable/cls_btn"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Home                "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/home"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:onClick="sellerhome"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Profile        "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/person_black"
            android:paddingLeft="10dp"
            android:onClick="sellerprofile"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Category          "
            android:background="#00000000"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_baseline_category_24"
            android:paddingLeft="10dp"
            android:onClick="sellercategory"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape44">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MENU"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="25sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:background="#00000000"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="30dp"
                android:drawableLeft="@drawable/ic_baseline_settings_suggest_24"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawablePadding="15dp"
                android:onClick="sellersettings"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Us"
                android:background="#00000000"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_baseline_contact_support_24"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawablePadding="15dp"
                android:onClick="sellercontactus"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feedback"
                android:background="#00000000"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_baseline_feedback_24"
                android:paddingLeft="10dp"
                android:drawablePadding="15dp"
                android:paddingRight="10dp"
                android:onClick="sellerfeedback"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:background="#00000000"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_baseline_info_24"
                android:paddingLeft="10dp"
                android:drawablePadding="15dp"
                android:paddingRight="10dp"
                android:onClick="sellerabout"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>