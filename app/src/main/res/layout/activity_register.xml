<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape2"
    tools:context=".activities.register_activity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:background="@drawable/shape2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTER HERE"
                android:textSize="25sp"
                android:textAlignment="center"
                android:fontFamily="@font/bungee"
                android:textStyle="bold"/>


            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="10dp"
                card_view:contentPadding="5dp"
                android:background="@drawable/shape2">
                <EditText
                    android:id="@+id/name"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="Name*"
                    android:inputType="textPersonName"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="10dp"
                card_view:contentPadding="5dp"
                android:background="@drawable/shape2"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/email"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="Email*"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="10dp"
                card_view:contentPadding="5dp"
                android:background="@drawable/shape2"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/phone"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="Phone Number*"
                    android:inputType="phone"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_baseline_email_24"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="10dp"
                card_view:contentPadding="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape2"
                >
                <EditText
                    android:id="@+id/password"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="Password*"
                    android:inputType="textPassword"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/ic_baseline_lock_24"
                    android:paddingLeft="10dp"
                    android:padding="10dp"
                    android:drawableRight="@drawable/ic_baseline_visibility_off_24"
                    android:longClickable="false"/>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="10dp"
                card_view:contentPadding="5dp"
                android:background="@drawable/shape2"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/shopname"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="Shop Name(Optional)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/baseline_shop_24"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="10dp"
                card_view:contentPadding="5dp"
                android:background="@drawable/shape2"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/shopaddress"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="Shop Address"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/baseline_location_city_24"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                card_view:cardCornerRadius="15dp"
                card_view:cardElevation="10dp"
                card_view:contentPadding="5dp"
                android:background="@drawable/shape2"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/type"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:hint="User | Admin | Seller*"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:background="@drawable/shape"
                    android:drawableLeft="@drawable/type"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <CheckBox
                    android:id="@+id/usercheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="User"
                    tools:ignore="TouchTargetSizeCheck" />

                <CheckBox
                    android:id="@+id/admincheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Admin"
                    tools:ignore="TouchTargetSizeCheck" />
                <CheckBox
                    android:id="@+id/sellercheck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Seller"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/shape3"
                android:fontFamily="@font/abril_fatface"
                android:text="SIGN UP"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:onClick="signup"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface"
                    android:gravity="center"
                    android:text="Don't have an account ?"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/abril_fatface"
                    android:gravity="center"
                    android:onClick="clickregister"
                    android:paddingLeft="5dp"
                    android:text="Sign In"
                    android:textColor="#36D424"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>