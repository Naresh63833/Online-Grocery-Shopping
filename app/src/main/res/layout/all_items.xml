<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    app:cardElevation="3dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/all_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/deal"
            android:scaleType="centerCrop"
            android:contentDescription="TODO" />
        <TextView
            android:id="@+id/all_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deals your purchase"
            android:textSize="19sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/alice"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/all_desc"
            android:text="Purchase your Rating"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center"/>
            <ImageView
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-5dp"
                android:src="@drawable/rating"
                android:layout_gravity="center_horizontal"
                android:contentDescription="TODO" />
            <TextView
                android:id="@+id/all_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="5.0"
                android:fontFamily="@font/alice"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/all_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount 20% off"
            android:layout_gravity="center"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>